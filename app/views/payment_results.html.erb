<h1>Payment Results</h1>

<dl>
  <dt>APR</dt>
  <dd><%= @apr.to_s(:percentage, {:precision => 4}) %></dd>

  <dt>Number of years</dt>
  <dd><%= @term_month / 12 %></dd>

  <dt>Principal</dt>
  <dd><%= @principal.to_s(:currency, {:precision => 2}) %></dd>

  <dt>Payment</dt>
  <dd><%= @monthly_payment.to_s(:currency, {:precision => 2}) %></dd>


  </dl>

